@using TimeTracker.BE.Web.Shared.Services
@using TimeTracker.FE.Web.Components.Services

@code {
    protected HttpClient _httpClient = null!;
    [Inject]
    protected IEventLogService _eventLogService { get; set; } = null!;
    [Inject]
    protected ToastNotificationService _toastNotificationService { get; set; } = null!;
    [Inject]
    private IHttpClientFactory _httpClientFactory { get; set; } = null!;
    [Inject]
    protected NavigationManager _navigationManager { get; set; } = null!;

    protected override void OnInitialized()
    {
        try
        {
            if (_httpClientFactory != null)
                _httpClient = _httpClientFactory.CreateClient("TimeTrackerAPI");
        }
        catch (Exception ex)
        {
            _eventLogService?.LogError(Guid.Parse("24cd2c19-6a7f-48b3-9533-e7981d87b63e"), ex);
        }
    }
}
