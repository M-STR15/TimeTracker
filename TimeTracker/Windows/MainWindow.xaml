<Window
    x:Class="TimeTracker.PC.Windows.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Title="Timer tracker"
    Height="650"
    Loaded="Window_Loaded"
    Style="{StaticResource MainWindow}"
    WindowStartupLocation="Manual"
    mc:Ignorable="d">

    <Window.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="/TimeTracker;Component/Dictionaries/MainWindowDictionary.xaml" />
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </Window.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="auto" />
            <RowDefinition Height="auto" />
            <RowDefinition Height="auto" />
            <RowDefinition Height="auto" />
            <RowDefinition Height="auto" />
        </Grid.RowDefinitions>
        <Menu>
            <MenuItem
                x:Name="mbtnShifts"
                Click="onOpenWindowShifts_Click"
                Header="Shifts" />
            <MenuItem Header="Reports">
                <MenuItem
                    x:Name="mbtnRecordList"
                    Click="onOpenWindowReportRecords_Click"
                    Header="Record list" />
                <MenuItem
                    x:Name="mbtnActivitiesOverDays"
                    Click="mbtnActivitiesOverDays_Click"
                    Header="Activities over days" />
                <MenuItem
                    x:Name="mbtnPlanVsRealitaWorkHours"
                    Click="mbtnPlanVsRealitaWorkHours_Click"
                    Header="Plan vs realita work hours" />
            </MenuItem>

            <MenuItem
                x:Name="mbtnSettings"
                Click="onOpenWindowSetting_Click"
                Header="Settings" />
        </Menu>
        <Grid Grid.Row="1">
            <Grid.RowDefinitions>
                <RowDefinition Height="*" />
                <RowDefinition Height="*" />
            </Grid.RowDefinitions>
            <Label
                Margin="5"
                Content="Activity"
                Style="{StaticResource lblMainTitle}" />
            <Border Grid.Row="1">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="auto" />
                        <RowDefinition Height="auto" />
                        <RowDefinition Height="auto" />
                        <RowDefinition Height="auto" />
                    </Grid.RowDefinitions>
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="auto" />
                            <RowDefinition Height="auto" />
                            <RowDefinition Height="auto" />
                            <RowDefinition Height="auto" />
                            <RowDefinition Height="auto" />
                            <RowDefinition Height="auto" />
                        </Grid.RowDefinitions>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*" />
                            <ColumnDefinition Width="*" />
                        </Grid.ColumnDefinitions>
                        <Label
                            Grid.Row="0"
                            Grid.Column="0"
                            Content="Type shift"
                            Style="{StaticResource lblStyle1}" />
                        <ComboBox
                            x:Name="cmbTypeShift"
                            Grid.Row="1"
                            Grid.Column="0" />
                        <Label
                            Grid.Row="0"
                            Grid.Column="1"
                            Content="Shift"
                            Style="{StaticResource lblStyle1}" />
                        <ComboBox
                            x:Name="cmbShift"
                            Grid.Row="1"
                            Grid.Column="1" />
                        <Label
                            Grid.Row="2"
                            Grid.Column="0"
                            Grid.ColumnSpan="2"
                            Content="Project"
                            Style="{StaticResource lblStyle1}" />
                        <ComboBox
                            x:Name="cmbProjects"
                            Grid.Row="3"
                            Grid.Column="0"
                            Grid.ColumnSpan="2"
                            SelectionChanged="onLoadDataAfterChangeProject_SelectionChanged" />
                        <Label
                            Grid.Row="4"
                            Grid.Column="0"
                            Grid.ColumnSpan="2"
                            Content="Sub module"
                            Style="{StaticResource lblStyle1}" />
                        <ComboBox
                            x:Name="cmbSubModule"
                            Grid.Row="5"
                            Grid.Column="0"
                            Grid.ColumnSpan="2" />
                    </Grid>
                    <Label
                        Grid.Row="1"
                        Content="Description"
                        Style="{StaticResource lblStyle1}" />
                    <RichTextBox
                        x:Name="rtbDescription"
                        Grid.Row="2"
                        Height="40"
                        Margin="5" />
                    <Button
                        x:Name="btnActivate"
                        Grid.Row="3"
                        Click="onActionAfterClickActivate_Click">
                        <StackPanel Orientation="Horizontal">
                            <Image Height="25" Source="../Resources/timer.png" />
                            <Label Margin="0" Content="Set" />
                        </StackPanel>
                    </Button>
                </Grid>
            </Border>
        </Grid>
        <Grid Grid.Row="2">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="auto" />
                    <RowDefinition Height="auto" />
                </Grid.RowDefinitions>
                <Label Content="Quick buttons" Style="{StaticResource lblMainTitle}" />
                <Border Grid.Row="1">
                    <StackPanel HorizontalAlignment="Center" Orientation="Horizontal">
                        <Button
                            x:Name="btnPause"
                            Grid.Row="7"
                            Width="100"
                            HorizontalAlignment="Left"
                            Click="onActionAfterClickPause_Click">
                            <StackPanel Orientation="Horizontal">
                                <Image Height="25" Source="../Resources/coffee-cup.png" />
                                <Label Margin="0" Content="Pause" />
                            </StackPanel>
                        </Button>
                        <Button
                            x:Name="btnEndShift"
                            Grid.Row="7"
                            Width="100"
                            HorizontalAlignment="Right"
                            Click="onActionAfterClickEndShift_Click">
                            <StackPanel Orientation="Horizontal">
                                <Image Height="25" Source="../Resources/stop.png" />
                                <Label Margin="0" Content="End of shift" />
                            </StackPanel>
                        </Button>
                    </StackPanel>
                </Border>
            </Grid>
        </Grid>
        <Grid Grid.Row="3">
            <Grid.RowDefinitions>
                <RowDefinition Height="*" />
                <RowDefinition Height="*" />
            </Grid.RowDefinitions>
            <TabControl Height="150">
                <TabItem Header="Last setting">
                    <Border Grid.Row="1">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*" />
                                <ColumnDefinition Width="*" />
                                <ColumnDefinition Width="*" />
                            </Grid.ColumnDefinitions>
                            <StackPanel Grid.Column="0">
                                <Label
                                    Grid.Row="0"
                                    Grid.Column="2"
                                    Content="Date shift"
                                    Style="{StaticResource lblStyle2}" />
                                <TextBlock
                                    x:Name="lblShift_date"
                                    Style="{StaticResource txbGrid}"
                                    Text=" " />
                                <Label Content="Project" Style="{StaticResource lblStyle2}" />
                                <TextBlock
                                    x:Name="lblProject"
                                    Style="{StaticResource txbGrid}"
                                    Text=" " />
                            </StackPanel>
                            <StackPanel Grid.Column="1">
                                <Label Content="Activity" Style="{StaticResource lblStyle2}" />
                                <TextBlock
                                    x:Name="lblActivity"
                                    Style="{StaticResource txbGrid}"
                                    Text=" " />
                                <Label Content="Sub mod." Style="{StaticResource lblStyle2}" />
                                <TextBlock
                                    x:Name="lblSubModule"
                                    Style="{StaticResource txbGrid}"
                                    Text=" " />
                            </StackPanel>
                            <StackPanel Grid.Column="2">
                                <Label
                                    Grid.Row="0"
                                    Grid.Column="2"
                                    Content="Time"
                                    Style="{StaticResource lblStyle2}" />
                                <TextBlock
                                    x:Name="lblTime_time"
                                    Margin="0"
                                    Style="{StaticResource txbGrid}"
                                    Text="00:00:00" />
                                <Label
                                    Grid.Row="0"
                                    Grid.Column="2"
                                    Content="Act. time"
                                    Style="{StaticResource lblStyle2}"
                                    ToolTip="Activation time" />
                                <TextBlock
                                    x:Name="lblStartTime_time"
                                    Style="{StaticResource txbGrid}"
                                    Text="00:00:00" />
                                <TextBlock
                                    x:Name="lblStartTime_date"
                                    Style="{StaticResource txbGrid}"
                                    Text="dd:MM:yy" />
                            </StackPanel>
                        </Grid>
                    </Border>
                </TabItem>
                <TabItem Header="Total time">
                    <Border Grid.Row="1">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="auto" />
                                <ColumnDefinition Width="*" />
                                <ColumnDefinition Width="*" />
                            </Grid.ColumnDefinitions>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="auto" />
                                <RowDefinition Height="auto" />
                                <RowDefinition Height="auto" />
                                <RowDefinition Height="auto" />
                            </Grid.RowDefinitions>
                            <Label
                                Grid.Row="1"
                                Content="Work"
                                Style="{StaticResource lblStyle2}" />
                            <Label
                                Grid.Row="2"
                                Content="Pause"
                                Style="{StaticResource lblStyle2}" />
                            <Label
                                Grid.Row="3"
                                Content="Total"
                                Style="{StaticResource lblStyle2}" />

                            <Label
                                Grid.Row="0"
                                Grid.Column="1"
                                Content="Today"
                                Style="{StaticResource lblStyle3}" />

                            <Label
                                Grid.Row="0"
                                Grid.Column="2"
                                Content="In shift"
                                Style="{StaticResource lblStyle3}" />

                            <Label
                                x:Name="lblWorkerTime"
                                Grid.Row="1"
                                Grid.Column="1"
                                HorizontalContentAlignment="Center"
                                Content="00:00:00" />

                            <Label
                                x:Name="lblPauseTime"
                                Grid.Row="2"
                                Grid.Column="1"
                                HorizontalContentAlignment="Center"
                                Content="00:00:00" />

                            <Label
                                x:Name="lblTotalTime"
                                Grid.Row="3"
                                Grid.Column="1"
                                HorizontalContentAlignment="Center"
                                Content="00:00:00" />

                            <Label
                                x:Name="lblWorkShiftTime"
                                Grid.Row="1"
                                Grid.Column="2"
                                HorizontalContentAlignment="Center"
                                Content="00:00:00" />

                            <Label
                                x:Name="lblPauseShiftTime"
                                Grid.Row="2"
                                Grid.Column="2"
                                HorizontalContentAlignment="Center"
                                Content="00:00:00" />

                            <Label
                                x:Name="lblTotalShiftTime"
                                Grid.Row="3"
                                Grid.Column="2"
                                HorizontalContentAlignment="Center"
                                Content="00:00:00" />
                        </Grid>
                    </Border>
                </TabItem>
            </TabControl>
        </Grid>
    </Grid>
</Window>