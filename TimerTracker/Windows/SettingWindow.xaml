<Window
    x:Class="TimerTracker.Windows.SettingWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:TimerTracker.Windows"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:temp="clr-namespace:TimerTracker.Helpers.Models"
    Title="SettingWindow"
    Width="800"
    Height="450"
    mc:Ignorable="d">

    <Window.Resources>
        <!--  Šablona pro Editable Project  -->
        <DataTemplate x:Key="EditableTemplate">
            <StackPanel Orientation="Horizontal">
                <TextBox Width="150" Text="{Binding Name, Mode=TwoWay}" />
                <Button Width="30">
                    <Label Content="Save" />
                </Button>
            </StackPanel>
        </DataTemplate>

        <!--  Šablona pro ReadOnly Project  -->
        <DataTemplate x:Key="ReadOnlyTemplate">
            <StackPanel Orientation="Horizontal">
                <Label Content="{Binding Name}" />
                <Button Width="30">
                    <Label Content="Edit" />
                </Button>
            </StackPanel>
        </DataTemplate>

        <!--  Template Selector  -->
        <temp:ProjectTemplateSelector
            x:Key="ProjectTemplateSelector"
            EditableTemplate="{StaticResource EditableTemplate}"
            ReadOnlyTemplate="{StaticResource ReadOnlyTemplate}" />
    </Window.Resources>

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="5" />
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>
        <Grid HorizontalAlignment="Stretch" VerticalAlignment="Stretch">
            <Grid.RowDefinitions>
                <RowDefinition Height="auto" />
                <RowDefinition Height="*" />
            </Grid.RowDefinitions>
            <Button
                x:Name="btnAddProject"
                Grid.Row="0"
                Grid.Column="0"
                Width="50"
                Height="30"
                Margin="5"
                HorizontalAlignment="Left">
                <Label Content="Add" />
            </Button>

            <ListBox
                x:Name="listProject"
                Grid.Row="1"
                HorizontalAlignment="Stretch"
                ItemTemplateSelector="{StaticResource ProjectTemplateSelector}"
                ItemsSource="{Binding ProjectListBox}"
                SelectionChanged="listProject_SelectionChanged" />
        </Grid>
        <GridSplitter
            Grid.Column="1"
            Width="5"
            HorizontalAlignment="Stretch" />
        <Grid Grid.Column="2">
            <Grid.RowDefinitions>
                <RowDefinition Height="auto" />
                <RowDefinition Height="*" />
            </Grid.RowDefinitions>
            <Button
                x:Name="btnSubModule"
                Width="50"
                Height="30"
                Margin="5"
                HorizontalAlignment="Left">
                <Label Content="Add" />
            </Button>
            <ListBox
                x:Name="listSubModule"
                Grid.Row="1"
                HorizontalAlignment="Stretch"
                VerticalContentAlignment="Center" />
        </Grid>
    </Grid>
</Window>
