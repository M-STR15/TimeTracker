@using TimeTracker.FE.Web.Components.Models
@using TimeTracker.FE.Web.Components.Services
@inject ToastNotificationService ToastService

<div class="toast-message-container" role="alert" aria-live="assertive" aria-atomic="true" style="min-width: 300px;">
    <div class="toast-header">
        <strong class="me-auto">@Notification.Title</strong>
        <small>@Notification.TimeSinceStr</small>
        <button type="button" class="btn-close" aria-label="Close" @onclick="deleteNotification"></button>
    </div>
    <div class="toast-message-box">
        <div class="toast-message-text">
            @Notification.Message
        </div>
    </div>
</div>

